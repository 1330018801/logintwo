                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/eyesight_left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="右眼"
