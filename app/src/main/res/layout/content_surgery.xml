                android:paddingTop="5dp"
                android:paddingBottom="7dp"
                android:text="皮肤"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="7dp"
                android:text="淋巴结"/>
