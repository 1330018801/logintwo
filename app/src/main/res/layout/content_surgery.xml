                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingTop="4dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:background="@color/bg"
