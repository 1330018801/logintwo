                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左上"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mouth_tooth_missing_upleft"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mouth_tooth_decayed_upleft"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mouth_tooth_denture_upleft"/>
